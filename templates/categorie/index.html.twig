{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!{% endblock %}

{% block body %}

<h1>Liste des categories<h1>

{% if categories is not empty %}

   {{dump(categories)}}

   <table class="table">
    <thread>
        <tr>
            <th>Nom</th>
            <th>Description</th>
        </tr>
    </thread>
    <tbody>
        {% for categorie in categories %}
        <tr>
        <td>
            <a href="{{ path('une_categorie',{'id':categorie.id}) }}">{{categorie.nom}}</a>
        </td>
            <th>{{categorie.description}}</th>
            <td>
                <a href="{{path('delete_categorie', {'id' : categorie.id})}}">
                Supprimer
                </a>
            </td>
        </tr>
    {% endfor %}


{% else %}

    <p>Il n'y a aucune categories</p>

{% endif %}


    {{ form (form_ajout)}}
{% endblock %}
